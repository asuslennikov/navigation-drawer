<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Material.Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColorPrimary">@color/text_and_icons</item>
    </style>

    <style name="toolbarNavigationIconStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Theme.Material" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Set AppCompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorSwitchThumbNormal">@color/accent</item>

        <!--Toolbar theme attributes -->
        <item name="toolbarNavigationButtonStyle">@style/toolbarNavigationIconStyle</item>
    </style>
</resources>